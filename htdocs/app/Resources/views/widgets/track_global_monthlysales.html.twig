                        <td>{{ month[year]|default([])? month[year]['ratio_year_SE']|number_format(2, '.', ' '): '--' }}</td>
                        <td>{{ month[year]|default([])? month[year]['ratio_year2_year']|number_format(2, '.', ' '): '--' }} %</td>
