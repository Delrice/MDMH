{% extends 'layout/base_login.html.twig' %}

{% block title %}{{ 'user.login.page_title'|trans }}{% endblock %}

{% block content %}
    <p class="login-box-msg">{{ 'user.login.title'|trans }}</p>

    <form action="{{ path('security_login_check') }}" class="form-signin" method="POST">
        <div class="form-group has-feedback">
            <input name="login" type="text" class="form-control" placeholder="{{ 'user.login.username'|trans }}" value="{{ last_username }}">
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            <input name="password" type="password" class="form-control" placeholder="{{ 'user.login.password'|trans }}">
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="row">
            <div class="col-xs-5">
                <button id="LoginButton" type="submit" class="btn btn-primary btn-block btn-flat">{{ 'user.login.sign-in'|trans }}</button>
            </div>
            <!-- /.col -->
        </div>
    </form>
{% endblock %}

