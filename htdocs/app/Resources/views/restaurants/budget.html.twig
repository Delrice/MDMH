{% extends 'layout/base.html.twig' %}

{% block title %}{{ 'restaurant.budget.page_title'|trans }}{% endblock %}

{% block page_header %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            {{ restaurant.name|upper }}
            <small>{{ 'header.restaurant.budget.optional'|trans }}</small>
        </h1>
        {{ include('layout/parts/breadcrumb.html.twig',
            {'pages': [
                {
                    'title': restaurant.name,
                    'href': path('restaurant_view', {'id': restaurant.id})
                },
                {
                    'title': 'restaurant.budget.page_title'|trans
                }
            ]
            })
        }}
    </section>
{% endblock %}

{% block content %}
    <div class="col-md-3">
        <div class="box box-primary">
            <div class="box-header">
                <h2 class="text-center">{{ restaurant.name }}</h2>
            </div>
            <div class="box-body">
                <ul class="list-group list-group-unbordered">
                    <li class="list-group-item">Item 1</li>
                    <li class="list-group-item">Item 2</li>
                    <li class="list-group-item">Item 3</li>
                </ul>
            </div>
            <div class="box-footer with-border text-center">
                <a href="#" class="btn btn-success">Create budget for {{ 'now'|date('Y') }}</a>
            </div>
        </div>
    </div>
{% endblock %}